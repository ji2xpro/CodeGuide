        <!--<property name="jdbcTemplate" ref="myShowMerchantJdbcTemplate"/>-->
    <!--</bean>-->
	
	<!--myGewara-->
	<bean id="myGewaraDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="username" value="${mygewara.jdbc.user}"></property>
		<property name="password" value="${mygewara.jdbc.password}"></property>
		<property name="driverClassName" value="${mygewara.jdbc.mysql.driver}"></property>
		<property name="url" value="${mygewara.jdbc.url}"></property>
	</bean>
	<bean id="myGewaraJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
