	</bean>
	
	<!--pointCard-->
	<bean id="pointCardDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="username" value="${pointcard.jdbc.user}"></property>
		<property name="password" value="${pointcard.jdbc.password}"></property>
		<property name="driverClassName" value="${pointcard.jdbc.mysql.driver}"></property>
